<!ENTITY % ops "eq|like|lt|le|gt|ge|not|neq|exists|and|or|in|between">
<!ENTITY % value "int|string|float|date|binary">
<!ENTITY % op_attr
	"item NMTOKEN #REQUIRED">
<!--	 dt (int|float|string|date|binary) &quot;string&quot;">
-->
<!ELEMENT select (from*|what?|where?|order?)>
<!ATTLIST select
		xmlns:xsql "urn:com:xpository:xsql" #FIXED>
<!ELEMENT from (item)+>>
<!ELEMENT what (item)+>
<!ELEMENT where (%ops;)>
<!ELEMENT eq (%value;)>
<!ATTLIST eq % op_attr;>
<!ELEMENT neq (%value;)>
<!ATTLIST neq 
		% op_attr;>
<!ELEMENT lt (%value;)>
<!ATTLIST lt 
		% op_attr;>
<!ELEMENT gt (%value;)>
<!ATTLIST gt 
		% op_attr;>
<!ELEMENT ge (%value;)>
<!ATTLIST ge 
		% op_attr;>
<!ELEMENT le (%value;)>
<!ATTLIST le 
		% op_attr;>
<!ELEMENT like #PCDATA>
<!ATTLIST like 
		item NMTOKEN #REQUIRED>
<!ELEMENT exists (select)>
<!ELEMENT order (item)+>
<!ELEMENT item EMPTY>
<!ATTLIST item
		name NMTOKEN #REQUIRED>
<!ELEMENT and (%ops;)+>
<!ELEMENT or (%ops;)+>
<!ELEMENT not (%ops;)>
<!ELEMENT in (%value;)+>
<!ATTLIST in 
		% op_attr;>
<!ELEMENT between (%value;)+>
<!ATTLIST between 
		% op_attr;>


		 